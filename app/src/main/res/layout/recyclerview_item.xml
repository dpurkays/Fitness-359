<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/sessionHour"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:background="#66000000"
        android:textSize="15sp"
        android:fontFamily="@font/jet_brains_monowght"/>

    <TextView
        android:id="@+id/sessionDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:background="#66FFFFFF"
        android:textSize="15sp"
        android:fontFamily="@font/jet_brains_monowght"/>

    <TextView
        android:id="@+id/sessionLocation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="TextView"
        android:clickable="true"
        android:textColor="#2E95E4"
        android:textIsSelectable="false"
        android:background="#66000000"
        android:textSize="15sp"
        android:fontFamily="@font/jet_brains_monowght"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="20px"
        android:layout_marginLeft="20px"
        android:layout_weight="2"
        android:background="#C62D2D"
        android:text="Cancel"
        android:textColor="#F4F1F1"
        android:textSize="15sp"
        android:fontFamily="@font/jet_brains_monowght"/>

</LinearLayout>
