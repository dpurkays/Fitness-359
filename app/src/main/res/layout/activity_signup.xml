<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SignUpLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/running"
    android:backgroundTint="@color/background_dark"
    android:backgroundTintMode="src_over">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up for a Session"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:textColor="#FFFFFF"
            android:background="#66000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/textViewMonth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:textColor="#FFFFFF"
                android:background="#66000000"
                android:gravity="center"
                android:text="Month" />

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:textColor="#000000"
                android:background="#66FFFFFF"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textViewDay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Day"
                android:layout_height="100dp"
                android:textColor="#FFFFFF"
                android:background="#66000000"/>

            <Spinner
                android:id="@+id/daySpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints="Day"
                android:layout_height="100dp"
                android:textColor="#000000"
                android:background="#66FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Time"
                android:layout_height="100dp"
                android:textColor="#FFFFFF"
                android:background="#66000000"/>
                android:gravity="center"
                android:text="Time" />

            <Spinner
                android:id="@+id/daytimeSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scrollbarSize="4dp"
                android:layout_height="100dp"
                android:textColor="#000000"
                android:background="#66FFFFFF" />

            <TextView
                android:id="@+id/textViewHour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hour"
                android:layout_height="100dp"
                android:textColor="#FFFFFF"
                android:background="#66000000"/>

            <Spinner
                android:id="@+id/hourSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:textColor="#000000"
                android:background="#66FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Location"
                android:layout_height="100dp"
                android:textColor="#FFFFFF"
                android:background="#66000000"/>
                android:gravity="center"
                android:text="Location" />

            <Spinner
                android:id="@+id/locationSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:textColor="#000000"
                android:background="#66FFFFFF"/>
        </LinearLayout>

        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Book a Session"
            android:background="@drawable/button_color"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="40dp"
            />

        <Button
            android:id="@+id/viewBookingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="View your bookings"
            android:background="@drawable/button_color"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>